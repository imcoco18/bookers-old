
<body class="edit">

<h1 class="headline">Editing Book</h1>

<%= form_for(@book) do |f| %>
    <p class="box">Title</p>
    <%= f.text_field :title %>
    <p class="box">Body</p>
    <%= f.text_area :body %>
    <p>
    <%= f.submit 'Update Book' %>
	</p>
<% end %>


<p>

<%= link_to "Show", book_path(@book) %> |
<%= link_to "Back", books_path %>


</p>

</body>